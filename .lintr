linters: linters_with_defaults(
    line_length_linter(120),
    commented_code_linter = NULL,
    cyclocomp_linter = NULL,
    indentation_linter(hanging_indent_style="always"),
    object_name_linter(styles = c('snake_case','camelCase', 'symbols'), regexes = c(allcaps = "[A-Z]"))
  )
exclusions: list(
    "vignettes/demo.Rmd",
    "vignettes/my-vignette.Rmd"
  )
encoding: "UTF-8"
